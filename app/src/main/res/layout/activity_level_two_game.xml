<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDEFF"
    >

    <TextView
        android:id="@+id/timer"
        android:layout_width="69dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/gilroyextrabold"
        android:gravity="top"
        android:textColor="#718AF4"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="02:00" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rect_vio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/gilroyb"
        android:text="Items to protect: "
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/timer3"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/timer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timer" />

    <TextView
        android:id="@+id/binTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroyb"
        android:text="Install"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glassBin"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/shareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroyb"
        android:text="Backup"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plasticBin"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/reportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroyb"
        android:text="Encrypt"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paperBin"
        app:layout_constraintVertical_bias="0.036" />

    <ImageView
        android:id="@+id/organicBin"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toEndOf="@+id/paperBin"
        app:layout_constraintTop_toBottomOf="@+id/correctImage4"
        app:srcCompat="@drawable/ignore_spam" />

    <ImageView
        android:id="@+id/wrongImage2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/wrongImage1"
        app:layout_constraintTop_toTopOf="@+id/wrongImage1" />

    <ImageView
        android:id="@+id/correctImage3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/correctImage2"
        app:layout_constraintTop_toTopOf="@+id/correctImage2"
        app:srcCompat="@drawable/correct" />

    <ImageView
        android:id="@+id/glassBin"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_below="@+id/timer"
        android:layout_marginStart="8dp"
        android:layout_marginTop="172dp"
        android:contentDescription="Save"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/file" />

    <ImageView
        android:id="@+id/wrongImage4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/wrongImage3"
        app:layout_constraintTop_toTopOf="@+id/wrongImage3" />

    <ImageView
        android:id="@+id/wrongImage1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="56dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/glassBin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763" />

    <ImageView
        android:id="@+id/correctImage1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="56dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/glassBin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763"
        app:srcCompat="@drawable/correct" />

    <ImageView
        android:id="@+id/wrongImage3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/wrongImage2"
        app:layout_constraintTop_toTopOf="@+id/wrongImage2" />

    <ImageView
        android:id="@+id/plasticBin"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/glassBin"
        app:layout_constraintTop_toTopOf="@+id/glassBin"
        app:srcCompat="@drawable/backup" />

    <ImageView
        android:id="@+id/paperBin"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/plasticBin"
        app:layout_constraintTop_toTopOf="@+id/plasticBin"
        app:srcCompat="@drawable/encrypted" />

    <ImageView
        android:id="@+id/correctImage4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/correctImage3"
        app:layout_constraintTop_toTopOf="@+id/correctImage3"
        app:srcCompat="@drawable/correct" />

    <ImageView
        android:id="@+id/correctImage2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/correctImage1"
        app:layout_constraintTop_toTopOf="@+id/correctImage1"
        app:srcCompat="@drawable/correct" />

    <TextView
        android:id="@+id/deleteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gilroyb"
        android:text="Clear"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/organicBin"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/organicBin"
        app:layout_constraintTop_toBottomOf="@+id/organicBin" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Score : 0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garbageImage"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/description"
        android:layout_width="299dp"
        android:layout_height="144dp"
        android:fontFamily="@font/regular"
        android:text="Here you have the information either in your mobile device or personal computer, yours is to drag and drop the items where they need to be, if the item needs protection then drag it to protected area, if it needs to be cleared clear it out, Learn more."
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTextView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/garbageImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plasticBin"
        app:srcCompat="@drawable/apple" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorAccent"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>