<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:padding="8dp">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_btn"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:text="Game Over!"
        android:textColor="#c4572f"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Score: 1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="#fff"
        android:layout_below="@id/result"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/replay"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/eclipse"
        android:backgroundTint="#c93b30"
        android:src="@drawable/ic_baseline_close_24" />

    <LinearLayout
        android:layout_width="566dp"
        android:layout_height="271dp"
        android:layout_below="@id/score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_btn"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/eclipse"
                android:src="@drawable/ic_baseline_info_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroyextrabold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="HOW TO STAY SAFE FROM VIRUSES:"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroym"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="->Do not install games from unknown sources."
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text=""
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroym"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="-> Use public Wifi safely "
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text=""
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroym"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="-> Update Antivirus from time to time"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text=""
            android:textSize="14sp" />

        <Button
            android:id="@+id/learnMore"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/my_btn"
            android:backgroundTint="#75C8FF"
            android:fontFamily="@font/gilroyb"

            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingRight="40dp"
            android:paddingBottom="5dp"
            android:text="Quiz Now!"
            android:onClick="onClick"
            android:clickable="true"
            android:textColor="#fff"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>